{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Swagger TODO List API",
    "description": "An API for basic TODO list managment",
    "termsOfService": "",
    "contact": {
      "name": ""
    },
    "license": {
      "name": ""
    }
  },
  "host": "localhost:4000",
  "basePath": "/",
  "schemes": [
    "http"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/users/register": {
      "post": {
        "summary": "Create a new user in the system",
        "parameters": [{
          "in": "header",
          "name": "Api-Key",
          "type": "string",
          "required": true
        },{
          "name": "User",
          "in": "body",
          "description": "User to add to the system",
          "required": true,
          "schema": {
            "$ref": "#/definitions/SignUpUser"
          }
        }],
        "produces": [
          "application/json"
        ],
        "responses": {
          "201": {
            "description": "Created user",
            "schema": {
              "$ref": "#/definitions/UserResponse"
            }
          },
          "400": {
            "description": "All inputs are required",
            "schema": {
              "$ref": "#/definitions/ToDoListError"
            }
          },
          "409": {
            "description": "User Already Exist",
            "schema": {
              "$ref": "#/definitions/ToDoListError"
            }
          },
          "500": {
            "description": "Unexpected Error",
            "schema": {
              "$ref": "#/definitions/ToDoListError"
            }
          }
        }
      }
    },
    "/users/login": {
      "post": {
        "summary": "Returns a JWT for the logged in user",
        "parameters": [{
          "in": "header",
          "name": "Api-Key",
          "type": "string",
          "required": true
        }, {
          "name": "Login",
          "in": "body",
          "description": "Login information for the user",
          "required": true,
          "schema": {
            "$ref": "#/definitions/Login"
          }
        }],
        "produces": [
          "application/json"
        ],
        "responses": {
          "201": {
            "description": "Logged in user",
            "schema": {
              "$ref": "#/definitions/UserResponse"
            }
          },
          "400": {
            "description": "All inputs are required",
            "schema": {
              "$ref": "#/definitions/ToDoListError"
            }
          },
          "401": {
            "description": "Login failed",
            "schema": {
              "$ref": "#/definitions/ToDoListError"
            }
          },
          "500": {
            "description": "Unexpected Error",
            "schema": {
              "$ref": "#/definitions/ToDoListError"
            }
          }
        }
      }
    },
    "/list/create": {
      "post": {
        "summary": "Creates a list for the logged in user with the supplied name",
        "parameters": [{
          "in": "header",
          "name": "Api-Key",
          "type": "string",
          "required": true
        }, {
          "in": "header",
          "name": "Authorization",
          "description": "Bearer JWT for the logged in user",
          "type": "string",
          "required": true
        }, {
          "name": "List",
          "in": "body",
          "description": "List details",
          "required": true,
          "schema": {
            "$ref": "#/definitions/BasicList"
          }
        }],
        "produces": [
          "application/json"
        ],
        "responses": {
          "201": {
            "description": "Created list response",
            "schema": {
              "$ref": "#/definitions/ListResponse"
            }
          },
          "400": {
            "description": "All inputs are required",
            "schema": {
              "$ref": "#/definitions/ToDoListError"
            }
          },
          "401": {
            "description": "Auth has expired",
            "schema": {
              "$ref": "#/definitions/ToDoListError"
            }
          },
          "500": {
            "description": "Unexpected Error",
            "schema": {
              "$ref": "#/definitions/ToDoListError"
            }
          }
        }
      }
    },
    "/list/all": {
      "get": {
        "summary": "Returns all lists from the system that the user has access to",
        "parameters": [{
          "in": "header",
          "name": "Api-Key",
          "type": "string",
          "required": true
        }, {
          "in": "header",
          "name": "Authorization",
          "description": "Bearer JWT for the logged in user",
          "type": "string",
          "required": true
        }],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "A list of lists response",
            "schema": {
              "$ref": "#/definitions/AllListsResponse"
            }
          }
        }
      }
    },
    "/list/{listId}": {
      "get": {
        "summary": "Returns a specific list the user has access to",
        "parameters": [{
          "in": "header",
          "name": "Api-Key",
          "type": "string",
          "required": true
        }, {
          "in": "header",
          "name": "Authorization",
          "description": "Bearer JWT for the logged in user",
          "type": "string",
          "required": true
        }, {
          "name": "listId",
          "in": "path",
          "description": "List id",
          "required": true,
          "type": "integer"
        }],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "A list response",
            "schema": {
              "$ref": "#/definitions/ListResponse"
            }
          },
          "401": {
            "description": "Auth has expired",
            "schema": {
              "$ref": "#/definitions/ToDoListError"
            }
          },
          "404": {
            "description": "List can't be found or User doesn't have access to the specified list",
            "schema": {
              "$ref": "#/definitions/ToDoListError"
            }
          }
        }
      },
      "post": {
        "summary": "Updates a list for the logged in user with the supplied name and list id",
        "parameters": [{
          "in": "header",
          "name": "Api-Key",
          "type": "string",
          "required": true
        }, {
          "in": "header",
          "name": "Authorization",
          "description": "Bearer JWT for the logged in user",
          "type": "string",
          "required": true
        }, {
          "name": "listId",
          "in": "path",
          "description": "List id",
          "required": true,
          "type": "integer"
        }, {
          "name": "List",
          "in": "body",
          "description": "List details",
          "required": true,
          "schema": {
            "$ref": "#/definitions/BasicList"
          }
        }],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Updated list response",
            "schema": {
              "$ref": "#/definitions/ListResponse"
            }
          },
          "400": {
            "description": "All inputs are required",
            "schema": {
              "$ref": "#/definitions/ToDoListError"
            }
          },
          "401": {
            "description": "Auth has expired",
            "schema": {
              "$ref": "#/definitions/ToDoListError"
            }
          },
          "404": {
            "description": "List can't be found or User doesn't have access to the specified list",
            "schema": {
              "$ref": "#/definitions/ToDoListError"
            }
          },
          "500": {
            "description": "Unexpected Error",
            "schema": {
              "$ref": "#/definitions/ToDoListError"
            }
          }
        }
      },
      "delete": {
        "summary": "Deletes a list for the logged in user with the supplied list id",
        "parameters": [{
          "in": "header",
          "name": "Api-Key",
          "type": "string",
          "required": true
        }, {
          "in": "header",
          "name": "Authorization",
          "description": "Bearer JWT for the logged in user",
          "type": "string",
          "required": true
        }, {
          "name": "listId",
          "in": "path",
          "description": "List id",
          "required": true,
          "type": "integer"
        }],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Deleted list response",
            "schema": {
              "$ref": "#/definitions/MessageResponse"
            }
          },
          "401": {
            "description": "Auth has expired",
            "schema": {
              "$ref": "#/definitions/ToDoListError"
            }
          },
          "404": {
            "description": "List can't be found or User doesn't have access to the specified list",
            "schema": {
              "$ref": "#/definitions/ToDoListError"
            }
          },
          "500": {
            "description": "Unexpected Error",
            "schema": {
              "$ref": "#/definitions/ToDoListError"
            }
          }
        }
      }
    },
    "/list/{listId}/items": {
      "get": {
        "summary": "Returns all pets from the system that the user has access to",
        "parameters": [{
          "in": "header",
          "name": "Api-Key",
          "type": "string",
          "required": true
        }],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "A list of pets.",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Pet"
              }
            }
          }
        }
      }
    },
    "/list/{listId}/items/create": {
      "get": {
        "summary": "Returns all pets from the system that the user has access to",
        "parameters": [{
          "in": "header",
          "name": "Api-Key",
          "type": "string",
          "required": true
        }],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "A list of pets.",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Pet"
              }
            }
          }
        }
      }
    },
    "/list/{listId}/items/{itemId}": {
      "get": {
        "summary": "Returns all pets from the system that the user has access to",
        "parameters": [{
          "in": "header",
          "name": "Api-Key",
          "type": "string",
          "required": true
        }],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "A list of pets.",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Pet"
              }
            }
          }
        }
      }
    }
  },
  "definitions": {
    "BasicUser": {
      "type": "object",
      "required": [
        "email",
        "firstName",
        "lastName"
      ],
      "properties": {
        "email": {
          "type": "string"
        },
        "firstName": {
          "type": "string"
        },
        "lastName": {
          "type": "string"
        }
      }
    },
    "SignUpUser": {
      "allOf": [{
        "$ref": "#/definitions/BasicUser"
      }, {
        "type": "object",
        "properties": {
          "password": {
            "type": "string"
          }
        }
      }]
    },
    "FullUser": {
      "allOf": [{
        "$ref": "#/definitions/BasicUser"
      },{
        "type": "object",
        "properties": {
          "isActive": {
            "type": "boolean"
          },
          "id": {
            "type": "integer"
          },
          "token": {
            "type": "string"
          }
        }
      }]
    },
    "Login": {
      "type": "object",
      "required": [
        "email",
        "password"
      ],
      "properties": {
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      }
    },
    "BasicList": {
      "type": "object",
      "required": [
        "name"
      ],
      "properties": {
        "name": {
          "type": "string"
        }
      }
    },
    "FullList": {
      "allOf": [{
        "$ref": "#/definitions/BasicList"
      },{
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "ownerUserId": {
            "type": "integer"
          }
        }
      }]
    },
    "UserResponse": {
      "type": "object",
      "properties": {
        "data": {
          "$ref": "#/definitions/FullUser"
        }
      }
    },
    "ListResponse": {
      "type": "object",
      "properties": {
        "data": {
          "$ref": "#/definitions/FullList"
        }
      }
    },
    "AllListsResponse": {
      "type": "object",
      "properties": {
        "data": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/FullList"
          }
        }
      }
    },
    "MessageResponse": {
      "type": "object",
      "properties": {
        "message": {
          "type": "string"
        }
      }
    },
    "ToDoListError": {
      "type": "object",
      "properties": {
        "message": {
          "type": "string"
        },
        "errorNumber": {
          "type": "string"
        },
        "httpStatus": {
          "type": "integer"
        }
      }
    }
  }
}